<h1>New Beer</h1>


<%= form_for(@beer) do |f| %>
    <p>
    name: <%= f.text_field :name %>
    </p>
    <p>
      style: <%= f.collection_select(:style_id, Style.all, :id, :name) %>
    </p>
    brewery: <%= f.collection_select(:brewery_id, Brewery.all, :id, :name) %>
<p></p>
    <%= f.submit %>
</p>
<% end %>
<p></p>
<%= link_to 'Back', beers_path %>

