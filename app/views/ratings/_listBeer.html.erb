<h3>Best beers</h3>

<table class="table table-hover">
  <thead>
  <tr>
    <th>Beer</th>
    <th>Average</th>
  </tr>
  </thead>

  <tbody>
  <% beers.each do |beer| %>
      <tr>
        <td><%= beer.name %></td>
        <td><%=round(beer.average_rating) %></td>
        <td></td>
      </tr>
  <% end %>
  </tbody>
</table>