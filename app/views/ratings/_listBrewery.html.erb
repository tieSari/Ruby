<h3>Best breweries</h3>

<table class="table table-hover">
  <thead>
  <tr>
    <th>Brewery</th>
    <th>Average</th>
  </tr>
  </thead>

  <tbody>
  <% breweries.each do |brewery| %>
      <tr>
        <td><%= brewery.name %></td>
        <td><%=round(brewery.average_rating) %></td>
        <td></td>
      </tr>
  <% end %>
  </tbody>
</table>